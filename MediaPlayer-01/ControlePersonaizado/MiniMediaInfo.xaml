<UserControl x:Class="MediaPlayer_01.ControlePersonaizado.MiniMediaInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayer_01.ControlePersonaizado"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">
    <Button x:Name="CustonButton">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="ImgMiniatura" Margin="0" Source="../Resources/fast-forward-button.png"/>
            <Label x:Name="LbNome" Margin="0" Grid.Row="1">
                <Label.Content>
                    <AccessText TextWrapping="Wrap"/>
                </Label.Content>
            </Label>
        </Grid>
    </Button>
</UserControl>
